<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
	<id>cli</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<useProjectArtifact>true</useProjectArtifact>
			<unpack>true</unpack>
			<scope>runtime</scope>
		</dependencySet>
		<!-- include dependencies resolved by tycho -->
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<useProjectArtifact>true</useProjectArtifact>
			<unpack>true</unpack>
			<scope>provided</scope>
			<excludes>
				<exclude>com.google.guava:*</exclude>
				<exclude>org.apache.maven:*</exclude>
				<exclude>org.codehaus.*:*</exclude>
				<exclude>org.eclipse.incquery:incquery-maven-plugin</exclude>
				<exclude>org.eclipse.sisu:*</exclude>
				<exclude>org.sonatype.*:*</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<unpack>true</unpack>
			<scope>system</scope>
			<excludes>
				<exclude>p2.eclipse-plugin:com.ibm.icu</exclude>
				<exclude>p2.eclipse-plugin:org.apache.ant</exclude>
				<exclude>p2.eclipse-plugin:org.apache.batik*</exclude>
				<exclude>p2.eclipse-plugin:org.eclipse.ant*</exclude>
				<exclude>p2.eclipse-plugin:org.eclipse.compare*</exclude>
				<exclude>p2.eclipse-plugin:org.eclipse.core*</exclude>
				<exclude>p2.eclipse-plugin:org.eclipse.debug*</exclude>
				<exclude>p2.eclipse-plugin:org.eclipse.draw2d*</exclude>
				<exclude>p2.eclipse-plugin:org.eclipse.e4*</exclude>
				<exclude>p2.eclipse-plugin:org.eclipse.equinox*</exclude>
				<exclude>p2.eclipse-plugin:org.eclipse.gef*</exclude>
				<exclude>p2.eclipse-plugin:org.eclipse.gmf*</exclude>
				<exclude>p2.eclipse-plugin:org.eclipse.help*</exclude>
				<exclude>p2.eclipse-plugin:org.eclipse.jdt*</exclude>
				<exclude>p2.eclipse-plugin:org.eclipse.jface*</exclude>
				<exclude>p2.eclipse-plugin:org.eclipse.osgi*</exclude>
				<exclude>p2.eclipse-plugin:org.eclipse.papyrus.emf*</exclude>
				<exclude>p2.eclipse-plugin:org.eclipse.pde.*</exclude>
				<exclude>p2.eclipse-plugin:org.eclipse.swt.*</exclude>
				<exclude>p2.eclipse-plugin:org.eclipse.team*</exclude>
				<exclude>p2.eclipse-plugin:org.eclipse.text*</exclude>
				<exclude>p2.eclipse-plugin:org.eclipse.ui*</exclude>
				<exclude>p2.eclipse-plugin:org.eclipse.update*</exclude>
				<exclude>p2.eclipse-plugin:org.objectweb.asm</exclude>
				<exclude>p2.eclipse-plugin:org.sat4j*</exclude>
				<exclude>p2.eclipse-plugin:org.tukaani.xz*</exclude>
				<exclude>p2.eclipse-plugin:org.w3c.*</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>